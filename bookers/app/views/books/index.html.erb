<h1>Books</h1>
<table>
  <tr>
    <th class="title">Title</th>
    <th class="body">Body</th>
    <th class="show"></th>
    <th class="edit"></th>
    <th class="destroy"></th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
    <td class="title"><span><%= book.title %></span></td>
    <td class="body"><span><%= book.body %></span></td>
    <td class="show"><%= link_to "Show", "/books/#{book.id}" %></td>
    <td class="edit"><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
    <td class="destroy"><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure ?" %></td>
  </tr>
  <% end %>
</table>

<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  
  <h3>Body</h3>
  <%= f.text_area :body %>
  
  <br>
  <%= f.submit 'Create Book' %>
<% end %>