<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td>edit</td>
    <td>destroy</td>
  </tr>
  <% end %>
</table>



<h4>New Book</h4>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
  
  <br>
  <%= f.submit 'Create Book' %>
<% end %>